<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        layout="@layout/chose_activity_scrolling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/include_toolbar" />

    <fragment android:name="com.example.deer.manga.Chose.MenuFragment"
        android:id="@+id/menufragment"
        android:tag="menufragment_tag"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <fragment android:name="com.example.deer.manga.Chose.SplashFragment"
        android:id="@+id/splashfragment"
        android:tag="splashfragment_tag"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>